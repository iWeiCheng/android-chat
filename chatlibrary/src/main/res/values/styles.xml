<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme_RecorderDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme_Normal_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme_translate_anim_dialog" parent="@style/Theme_Normal_Dialog">
        <item name="android:windowAnimationStyle">@style/translateDialogAnim</item>
    </style>

    <style name="Theme_window_color_black" parent="AppTheme">
        <item name="android:windowBackground">@color/black_2</item>
        <item name="android:colorBackground">@color/black_2</item>
    </style>

    <style name="Theme_chat_window_color" parent="AppTheme">
        <item name="android:windowBackground">@color/chat_window_color</item>
        <item name="android:colorBackground">@color/chat_window_color</item>
    </style>

    <style name="translateDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/translate_enter_from_bottom_animation</item>
        <item name="@android:windowExitAnimation">@anim/translate_exit_to_bottom_animation</item>
    </style>
</resources>